@using WebApplication24.Models
@model ToDoCategoriesViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 well">
                <h3>Categories</h3>
                <a href="/home/newcategory" class="btn btn-primary">New Category</a>
                <table class="table table-hover table-striped table-bordered">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Edit</th>
                    </tr>
                    @foreach (ToDoCategory cat in Model.Categories)
                    {
                        <tr>
                            <td>@cat.Id</td>
                            <td>@cat.Name</td>
                            <td>
                                <a href="/home/editcategory?id=@cat.Id" class="btn btn-warning">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>
